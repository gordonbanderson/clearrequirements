{
	"name": "weboftalent/clearrequirements",
	"description": "Remove all requirements with a single template call and start template afresh",
	"type": "silverstripe-module",
	"keywords": [
		"silverstripe",
		"templates",
		"css",
		"javascript",
		"requirements",
		"weboftalent"
	],
	"authors": [
		{
			"name": "Gordon Anderson",
			"email": "gordon.b.anderson@gmail.com",
			"homepage": "https://github.com/gordonbanderson/weboftalent-clear-requirements",
			"role": "Developer"
		}
	],
	"require-dev": {
		"phpunit/phpunit": "^5.7",
		"squizlabs/php_codesniffer": "^2.3"
	},
	"autoload": {
		"psr-4": {
			"WebOfTalent\\ClearRequirements\\": "src/",
			"WebOfTalent\\ClearRequirements\\Tests\\": "tests/"
		}
	},
	"support": {
		"issues": "https://github.com/gordonbanderson/weboftalent-clear-requirements/issues"
	},
	"license": "BSD-3-Clause",
	"scripts": {
		"test": "phpunit",
		"check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
		"fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
